{
  "manifest_version": 3,
  "name": "Text-to-Speech with OpenAI TTS",
  "version": "2.3",
  "description": "Reads selected text using the OpenAI Text-to-Speech API with enhanced playback controls and download option.",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "downloads"
  ],
  "host_permissions": [
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
