{
  "manifest_version": 3,
  "name": "Text-to-Speech with OpenAI TTS",
  "version": "2.2",
  "description": "Reads selected text using the OpenAI Text-to-Speech API.",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
